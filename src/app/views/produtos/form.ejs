<html>
    <body>
        <form action="/produtos" method="post">
            <div>
                <label for="titulo">Título do Livro: </label>
                <input type="text" name="titulo" id="titulo" placeholder="Coloque o título aqui." />
            </div>
            <div>
                <label for="preco">Preço do Livro: </label>
                <input type="text" name="preco" id="preco" placeholder="Coloque o valor aqui." />
            </div>
            <div>
                <label for="descricao">Descrição do Livro</label>
                <textarea cols="25" rows="3" name="descricao" id="descricao" placeholder="Descrição do livro."></textarea>                
            </div>
            <input type="submit" value="Gravar"/>
        </form>
    </body>
</html>